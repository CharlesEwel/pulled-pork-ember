{{#if editPostForm}}
  <h4>Edit {{post.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=post.title}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=post.author}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=post.date}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          <select name="location" onchange={{action "updateValue" value="target.value"}}>
            <option  value="(indexOf location-list post.location)" selected="selected">{{post.location.city}}, {{post.location.country}}</option>
            {{#each location-list as |location index|}}
              {{#if (eq location.city post.location.city)}}
                <!-- don't write -->
              {{else}}
                <option value={{index}} selected={{eq selectedLocation index}}>{{location.city}}, {{location.country}}</option>
              {{/if}}
            {{/each}}
          </select>
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input type="textarea" value=content id="content" placeholder=post.content}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>

        <button {{action 'editPost' post}}>Update</button>
        <button{{action 'cancel'}}>Cancel</button>
      </form>
    </div>
{{else}}
    <button {{action 'editPostForm'}}>Edit</button>
{{/if}}
