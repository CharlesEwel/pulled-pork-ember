{{#if addNewPost}}
  <h1>New Post</h1>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="location">Location</label>
      {{input value=location id="location"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image"}}
    </div>

    <button{{action 'savePost'}}>Save</button>
  </form>
  {{else}}
    <button {{action 'articleFormShow'}}>New Post</button>
{{/if}}
