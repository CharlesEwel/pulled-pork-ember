<h2>Index Page</h2>
{{blog-post-list post-list=model}}

<div class="row well">
  <div class="col-sm-6 ">
    <h1>Add Post</h1>
    {{new-post save="save"}}
  </div>
  <div class="col-sm-6">
    <h1>Update Posts</h1>
    <div class="row">
      {{#each model as |post|}}
      <div class="col-sm-12">
        <p>{{post.title}}
          <button class="inline-button pull-right" {{action 'delete' post}}>Delete</button>
          <span class="pull-right">{{edit-post post=post edit="edit"}}</span>
        </p>
      </div>
      {{/each}}
    </div>
  </div>
</div>
